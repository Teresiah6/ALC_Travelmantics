<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/dealImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_margins"
        android:layout_marginLeft="@dimen/standard_margins"
        android:layout_marginTop="@dimen/standard_margins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_margins"
        android:layout_marginLeft="@dimen/standard_margins"
        android:text="TextView"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintStart_toEndOf="@+id/dealImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_margins"
        android:layout_marginLeft="@dimen/standard_margins"
        android:layout_marginTop="@dimen/standard_margins"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/dealImage"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <TextView
        android:id="@+id/costTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_margins"
        android:layout_marginEnd="@dimen/margin_user_others"
        android:layout_marginRight="@dimen/margin_user_others"
        android:text="TextView"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/price_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>
